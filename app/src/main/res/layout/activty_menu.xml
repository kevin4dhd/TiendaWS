<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnInsertarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Producto" />

    <Button
        android:id="@+id/btnActualizarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Producto" />

    <Button
        android:id="@+id/btnBorrarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar Producto" />

    <Button
        android:id="@+id/btnListarProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar Productos" />
</LinearLayout>